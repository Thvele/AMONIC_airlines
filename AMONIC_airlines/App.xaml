<Application x:Class="AMONIC_airlines.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:AMONIC_airlines"
             StartupUri="Authorization.xaml">
    <Application.Resources>

        <sys:String x:Key="connectionString">Data Source=localhost;Initial Catalog=Session1_XX;Integrated Security=True;</sys:String>
        
        <Style x:Key="mainWindowFont" TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="./Resources/Fonts/main.ttf #Tex Gyre Adventor"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

    </Application.Resources>
</Application>
